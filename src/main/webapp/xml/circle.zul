<zk xmlns="xhtml">
<svg width="100%" height="100%" version="1.1" 
xmlns:z="zk">
    <z:zscript><![CDATA[
    String[] bgnds = {"purple", "blue", "yellow"};
    int[] rads = {30, 25, 20};
    ]]></z:zscript>
    <circle style="fill:${each}" z:forEach="${bgnds}"
        cx="${50+rads[forEachStatus.index]}"
        cy="${20+rads[forEachStatus.index]}"
        r="${rads[forEachStatus.index]}"/>
</svg>
</zk>